<%- include('../partials/head.ejs') %>
<body>
<div class="container-sm" style="margin-bottom: 10px;">
    <form id="new-form" action="/recipe/<%= recipe._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
    
       <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px">RECIPE NAME</span>
        <input type="text" style="margin-bottom: 10px; margin-top: 10px" placeholder="recipe name" value="<%= recipe.name %>" name="name" class="form-control" aria-label="Recipe Name aria-describedby="addon-wrapping">
      </div>
    
    
      <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px">COOKING TIME</span>
        <input type="text"  style="margin-bottom: 10px; margin-top: 10px" placeholder="cooking time" value="<%= recipe.cook_time %>" name="cook_time" class="form-control" aria-label="Cooking Time" aria-describedby="addon-wrapping">
      </div>
    
      <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px">PREP TIME</span>
        <input type="text" style="margin-bottom: 10px; margin-top: 10px" placeholder="prep time" value="<%= recipe.prep_time %>" name="prep_time" class="form-control" aria-label="Prep Time" aria-describedby="addon-wrapping">
      </div>
    
      <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px">PORTION</span>
        <input type="text" style="margin-bottom: 10px; margin-top: 10px" placeholder="portion" value="<%= recipe.portion %>" name="portion" class="form-control" aria-label="Portion" aria-describedby="addon-wrapping">
      </div>

   
      <div class="input-group mb-3 flex-nowrap">
        <div class="input-group-prepend">
          <label class="input-group-text" for="inputGroupSelect01" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px">CATEGORY</label>
        </div>
        <select class="custom-select" id="inputGroupSelect01" style="font-family: rubik; margin-bottom: 10px; margin-top: 10px" value="<%= recipe.category%>">
          <option selected>Choose...</option>
          <option value="1">Breakfast</option>
          <option value="2">Lunch</option>
          <option value="3">Dinner</option>
          <option value="4">Dessert</option>
          <option value="5">Appetizer</option>
          <option value="6">Drink</option>
        </select>
      </div>
    
      
      <% if (recipe.ingredient_img) { %>
      <div class="input-group mb-3" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px">
        <label class="input-group-text" for="inputGroupFile01" style="background-color: #EFEFED; margin-bottom: 10px; margin-top: 10px"">UPLOAD</label>
        <input type="file"style="margin-bottom: 10px; margin-top: 10px" value="<%= recipe.ingredient_img %>" name="ingredient_img" class="form-control" id="inputGroupFile01">
        
      </div>
      <% } %> 
     
      <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px">INGREDIENTS</span>
        <input type="text" style="margin-bottom: 10px; margin-top: 10px" placeholder="ingredients" value="<%= recipe.ingredient %>" name="ingredient" class="form-control" aria-label="Ingredients" aria-describedby="addon-wrapping">
      
      </div>
      <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px;">DIRECTIONS</span>
        <input type="text" style="margin-bottom: 10px; margin-top: 10px" placeholder="directions" value="<%= recipe.direction %>" name="direction" class="form-control" aria-label="direction" aria-describedby="addon-wrapping">
      </div>
      
      <div class="input-group flex-nowrap">
        <span class="input-group-text" id="addon-wrapping" style ="background-color: #EFEFED; font-family: rubik; color: 324456; margin-bottom: 10px; margin-top: 10px">COMMENTS</span>
        <input type="text" style="margin-bottom: 10px; margin-top: 10px" placeholder="comments" value="<%= recipe.comment %>" name="comment" class="form-control" aria-label="Comments" aria-describedby="addon-wrapping">
    
      </div>
        <input style="background-color: #324456; font-family: rubik; color: white;" type="submit" value="UPDATE RECIPE">
      </div> 
      </form>
    </div>

        
    </body>